doctype html
html(lang='en')
    include ../common/head.pug
    +head("Users")
    body
        header
            include ../common/navbar.pug
            +navbar(user)
            .container
                .row.align-items-center 
                    .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
                        h1 Users
                        table.table
                            thead
                            tr
                                th(scope="col") Email
                                th(scope="col") Action
                                th(scope="col")
                            tr
                            tbody
                            for user in users
                                tr(id=user.id)
                                td
                                    span #{user.email}
                                td
                                    a(href="/user/" + user.id) Details
                                td
                                    button(onclick=`deleteUser('${user.id}')`).btn.btn-primary Delete
        include ../common/footer.pug
        +footer()
        script(src='javascripts/users.js')