doctype html 
html(lang='en')
    include ../common/head.pug
    +head("Sign up")
    body
        header
            include ../common/navbar.pug
            +navbar()
            .container
                .row 
                    .col-sm-12.offset-md-2.col-md-8
                        .jumbotron
                            h2.text-center Sign Up
                            .row 
                                .col-sm-12.col-md-12
                                    form(action='/signup', method='POST')
                                        div.formgroup
                                            label.small.mb-1.mt-3 Email:
                                            input(placeholder='Please enter your email', required=true, name='email', type='email', value='').form-control
                                            label.small.mb-1.mt-3 First Name:
                                            input(placeholder='Please enter your first name', required=true, name='first_name', type='first_name', value='').form-control
                                            label.small.mb-1.mt-3 Last name:
                                            input(placeholder='Please enter your last name', required=true, name='last_name', type='last_name', value='').form-control
                                            label.small.mb-1.mt-3 Phone number:
                                            input(placeholder='Please enter your phone number', required=true, name='phone_number', type='phone_number', value='').form-control
                                            label.small.mb-1.mt-3 Country:
                                            input(placeholder='Please enter your country', required=true, name='country', type='country', value='').form-control
                                            label.small.mb-1.mt-3 City:
                                            input(placeholder='Please enter your city', required=true, name='city', type='city', value='').form-control
                                            label.small.mb-1.mt-3 Address:
                                            input(placeholder='Please enter your address', required=true, name='address', type='address', value='').form-control
                                            label.small.mb-1.mt-3 Password:
                                            input(placeholder="New Password", required=true, name='password', type='password', value='').form-control
                                            button.mt-3.btn.btn-primary(type='submit') Sign Up
                                            p.mt-2.mb-0
                                                | Already have an account? #[a(href="/login") Log in here]
                                                
        include ../common/footer.pug
        +footer()